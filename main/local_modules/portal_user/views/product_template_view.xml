<?xml version="1.0"?>
<openerp>
    <data>
        <record id="portal_product_template_light_view" model="ir.ui.view">
            <field name="name">Portal User: remove buttons/pages</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="sale.product_template_form_view_sale_order_button"/>
            <field name="arch" type="xml">
                <field name="sale_ok" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </field>
                <label for="sale_ok" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </label>

                <page string="Information" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </page>

                <page string="Procurements" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </page>

                <page string="Inventory" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </page>
                <page string="Sales" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </page>
                <page string="Variants" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </page>
                <button name="action_view_sales" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </button>

            </field>
        </record>

        <record id="portal_product_template_light_tree_view" model="ir.ui.view">
            <field name="name">Portal User: remove buttons/pages</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="categ_id" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </field>
                <field name="type" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </field>
                <field name="state" position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </field>
            </field>
        </record>

        <record id="portal_product_template_light_kanban_view" model="ir.ui.view">
            <field name="name">Portal User: kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_kanban_details']/a[@name='%(product.product_variant_action)d']"
                       position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
                <xpath expr="//div[@class='oe_kanban_details']/ul/li"
                       position="attributes">
                    <attribute name="groups">base.group_system</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
